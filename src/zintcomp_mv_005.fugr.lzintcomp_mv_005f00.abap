FORM DB_UPD_ZINTCOMP_MV_005 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZINTCOMP_MV_005.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZINTCOMP_MV_005-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZINTCOMP_M_005 WHERE
  BUKRS = ZINTCOMP_MV_005-BUKRS AND
  BUKRSZ = ZINTCOMP_MV_005-BUKRSZ AND
  BKLAS = ZINTCOMP_MV_005-BKLAS AND
  MASRAF_TIP = ZINTCOMP_MV_005-MASRAF_TIP .
    IF SY-SUBRC = 0.
    DELETE ZINTCOMP_M_005 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZINTCOMP_M_005 WHERE
  BUKRS = ZINTCOMP_MV_005-BUKRS AND
  BUKRSZ = ZINTCOMP_MV_005-BUKRSZ AND
  BKLAS = ZINTCOMP_MV_005-BKLAS AND
  MASRAF_TIP = ZINTCOMP_MV_005-MASRAF_TIP .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZINTCOMP_M_005.
    ENDIF.
