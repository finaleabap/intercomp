ZINTCOMP_MV_005-MASRAF_TIP .
ZINTCOMP_M_005-MASRAF_HESAP =
ZINTCOMP_MV_005-MASRAF_HESAP .
ZINTCOMP_M_005-ARA_HESAP =
ZINTCOMP_MV_005-ARA_HESAP .
ZINTCOMP_M_005-KOSTL =
ZINTCOMP_MV_005-KOSTL .
ZINTCOMP_M_005-BUKRSZ =
ZINTCOMP_MV_005-BUKRSZ .
    IF SY-SUBRC = 0.
    UPDATE ZINTCOMP_M_005 ##WARN_OK.
    ELSE.
    INSERT ZINTCOMP_M_005 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZINTCOMP_MV_005-UPD_FLAG,
STATUS_ZINTCOMP_MV_005-UPD_CHECKD.
