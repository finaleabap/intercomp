    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZINTCOMP_M_007 WHERE
  BUKRS = ZINTCOMP_MV_007-BUKRS AND
  BUKRSZ = ZINTCOMP_MV_007-BUKRSZ AND
